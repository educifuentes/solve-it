<div class="payment-container-show text-center">
  <div class="row py-4">
    <div class="col">
      <h1 class="">Checkout summary</h1>
      <h2>
        <h2 id="info-payment text-justify">Purchase of <strong><%= @order.services_technician.service.name %></strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong></h2>
        <button id="pay" class="btn btn-yellow">Pay</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
          const paymentButton = document.getElementById('pay');
          paymentButton.addEventListener('click', () => {
            const stripe = Stripe('<%= ENV["STRIPE_PUBLISHABLE_KEY"] %>');
            stripe.redirectToCheckout({
              sessionId: '<%= @order.checkout_session_id %>'
            });
          });
        </script>
      </h2>
    </div>
  </div>
</div>
