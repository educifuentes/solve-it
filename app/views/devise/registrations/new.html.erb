<div class="container wrapper my-2">
<div id="form-content">

   <div id="form-header">
      <h4 >Register your account</h4>
    </div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-layout"} )do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :name, placeholder: "Name", label: false %>

    <%= f.input :email,
                label: false,
                required: true,
                label: false,
                placeholder: "Email address",
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <div class="d-flex justify-content-between">
    <%= f.input :password,
                required: true,
                placeholder: "Password",
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                placeholder: "Confirm your Password",
                label: false,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "form-btn" %>
  </div>
<% end %>

  <div id="form-footer">
      <%= render "devise/shared/links" %>
    </div>
</div>

</div>
