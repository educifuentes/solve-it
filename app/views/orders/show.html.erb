<div class="order-container-show">
  <div id="order-show-img">
    <div class="header-order">
      <h1 id="order-title">Thank you for choosing us!</h1>
    </div>
  </div>
  <div class="info-order">
    <ul class="list-group-order">
      <li class="list-group-item">Order:
        <%= @order.services_technician.service.name %>
      </li>
      <li class="list-group-item">Technician:
        <%= @order.services_technician.user.name %>
        <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />

      </li>
      <li class="list-group-item">Customer:
        <%= @order.user.name %>
      </li>
      <li class="list-group-item">Service price:
        <%= humanized_money_with_symbol(@order.amount) %>
      </li>
      <% if @order.review.present? %>
        <li class="list-group-item">Customer review:
          <%= @order.review.comment %>
        </li>
        <li class="list-group-item">Rating:
          <%= @order.review.rating %>
        </li>
      <% end %>
    </ul>

    <div class="d-flex justify-content-between">
      <% if @order.review.nil? %>
        <%= link_to "Leave a review", new_order_review_path(@order), class: "btn-yellow mr-2" %>
      <% end %>

      <%= link_to "Back to Home", root_path, class: "btn-blue"  %>
    </div>

  </div>
</div>
