<div class="container wrapper my-2">
<div id="form-content">

  <div id="form-header">
    <h4>Register your account</h4>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-layout"} )do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="container">
        <%= f.input :name, placeholder: "Name", label: false, autofocus: true %>

        <%= f.input :email,
                    label: false,
                    required: true,
                    placeholder: "Email address",
                    input_html: { autocomplete: "email" }%>

        <%= f.input :role,
                    label: false,
                    required: true,
                    collection: ["customer", "technician"],
                    prompt: "--Select a role--",
                    input_html: { class: "select-center" } %>

        <%= f.input :password,
                    required: true,
                    placeholder: "Password",
                    label: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>

      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "form-btn" %>
    </div>
  <% end %>

  <div id="form-footer">
    <%= render "devise/shared/links" %>
  </div>

</div>
